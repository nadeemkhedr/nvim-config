{
  "suggest.enablePreselect": true,

  // diagnostics
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  // "diagnostic.displayByAle": true,

  // codelens TODO what does this get me?
  // "codeLens.enable": true,

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql",
    "html",
    "yaml",
    "json",
    "python"
  ],
  "coc.preferences.hoverTarget": "float",

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // snippets
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableVimDevicons": false,
  "explorer.keyMappings": {
    "<cr>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open:sourceWindow"
    ],
    "v": "open:vsplit",
    "o": ["expandable?", ["expanded?", "collapse", "expand"], "open"]
  },

  "go.goplsOptions": {
    "completeUnimported": true
  },
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"],
      "initializationOptions": {
        "completeUnimported": true
      }
    }
  },
  "yaml.schemas": {
    "kubernetes": "/*.y*ml"
  },
  "cSpell.languageSettings": [
    {
      "languageId": "go",
      "enabled": false
    }
  ],
  "cSpell.userWords": ["bson", "kubernetes", "mongodb", "uuid", "xlarge"]

  // TODO language servers
  // TODO g:coc_global_extensions
  // TODO b:coc_suggest_disable=1 GOYO
  // TODO add to paths.vim g:coc_node_path
}
